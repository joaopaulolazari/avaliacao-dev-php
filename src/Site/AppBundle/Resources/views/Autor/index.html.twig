{% extends "SiteAppBundle::base.html.twig" %}

{% block body -%}
<div class="conteudo-geral" ng-controller="AutorController" ng-init="index()">
    <div class="row">
        <div class="col-md-6">
            <h3>Autores</h3>
        </div>
        <div class="col-md-6">
            <a href="{{ path('site_autor_cadastrar') }}" class="btn btn-success pull-right">
                <i class="fa fa-plus-square-o"></i> Cadastrar
            </a>
        </div>
    </div>
    <div class="row aguardando-dados">
        <div class="col-md-12">
            <div ng-show='size(autores) > 0'>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th style="width:15%;" class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="autor in autores">
                            <td><% autor.fsNome %></td>
                            <td class="text-center">
                                <a class="label label-default" href="<% rotaService.path('site_autor_editar', {'id': autor.fnAutorId}) %>" data-toggle="tooltip" data-placement="top" title="Editar autor">
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a class="label label-danger" ng-click='removerAutor(autor.fnAutorId, $index)' data-toggle="tooltip" data-placement="top" title="Remover autor" style="margin-left : 5px;">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div ng-show='size(autores) == 0'>
                <div class="well">
                    Nenhum registro encontrado.
                </div>
            </div>
        </div><!-- /.col-md-12 -->
    </div><!-- /.content -->
</div>
{% endblock %}

{% block javascripts %}
    <!-- Angular anomalia Script -->
    <script src="{{ asset('js/site/angular/app/controller/autor-controller.js') }}"></script>
{% endblock %}
