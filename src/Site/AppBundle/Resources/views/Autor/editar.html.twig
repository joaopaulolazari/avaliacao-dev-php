{% extends "SiteAppBundle::base.html.twig" %}

{% block body -%}
<div class="conteudo-geral" ng-controller="AutorController" ng-init="editar()">
    <form type="PUT" name="autorForm" valida-form url="{{ path('api_app_autor_atualizar', {id: app.request.get('id')}) }}" model="autor" redireciona="{{ path('site_autor') }}" tab-enter="submit">
        <div class="row">
            <div class="col-md-6">
                <h3>Editar Autor</h3>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success pull-right">
                    <i class="fa fa-floppy-o"></i> Salvar
                </button>
                <a href="{{ path('site_autor') }}" class="btn btn-default pull-right">
                    <i class="fa fa-reply"></i> Voltar
                </a>
            </div>
        </div>
        <div class="content">
            {% include 'SiteAppBundle:Autor:formulario.html.twig' -%}
        </div><!-- /.content -->
    </form>
</div>
{% endblock %}

{% block javascripts %}
    <!-- Angular anomalia Script -->
    <script src="{{ asset('js/site/angular/app/controller/autor-controller.js') }}"></script>
{% endblock %}
