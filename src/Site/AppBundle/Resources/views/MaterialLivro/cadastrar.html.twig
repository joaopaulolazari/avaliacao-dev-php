{% extends "SiteAppBundle::base.html.twig" %}

{% block body -%}
<div class="conteudo-geral" ng-controller="MaterialController" ng-init="cadastrarLivro()">
    <form type="POST" enctype="multipart/form-data" name="materialLivroForm" valida-form url="{{ path('api_app_material_livro_cadastrar') }}" model="materialLivro" redireciona="{{ path('site_material') }}" tab-enter="submit">
        <div class="row">
            <div class="col-md-6">
                <h3>Cadastrar Livro</h3>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success pull-right">
                    <i class="fa fa-floppy-o"></i> Salvar
                </button>
                <a href="{{ path('site_material') }}" class="btn btn-default pull-right">
                    <i class="fa fa-reply"></i> Voltar
                </a>
            </div>
        </div>
        <div class="content">
            {% include 'SiteAppBundle:MaterialLivro:formulario.html.twig' -%}
        </div><!-- /.content -->
    </form>
</div>
{% endblock %}

{% block javascripts %}
    <!-- Angular anomalia Script -->
    <script src="{{ asset('js/site/angular/app/controller/material-controller.js') }}"></script>
{% endblock %}
