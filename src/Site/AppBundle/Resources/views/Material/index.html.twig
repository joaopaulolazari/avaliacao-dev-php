{% extends "SiteAppBundle::base.html.twig" %}

{% block body -%}
<div class="conteudo-geral" ng-controller="MaterialController" ng-init="index()">
    <div class="row">
        <div class="col-md-6">
            <h3>Livros</h3>
        </div>
        <div class="col-md-3">
            <a href="{{ path('site_material_livro_cadastrar') }}" class="btn btn-success pull-right">
                <i class="fa fa-plus-square-o"></i> Cadastrar Livro
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('site_material_dicionario_cadastrar') }}" class="btn btn-success pull-right">
                <i class="fa fa-plus-square-o"></i> Cadastrar Dicionário
            </a>
        </div>
    </div>
    <div class="row aguardando-dados">
        <div class="col-md-12">
            <div ng-show='size(materiais) > 0'>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th style="width:15%;" class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="material in materiais">
                            <td><% material.fsTitulo %></td>
                            <td class="text-center">
                                <a
                                    class="label label-default"
                                    ng-click='editarMaterial(material)'
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    title="Editar material"
                                >
                                    <i class="fa fa-pencil"></i>
                                </a>
                                <a
                                    class="label label-danger"
                                    ng-click='removerMaterial(material, $index)'
                                    data-toggle="tooltip"
                                    data-placement="top"
                                    title="Remover material"
                                    style="margin-left : 5px;"
                                >
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div ng-show='size(materiais) == 0'>
                <div class="well">
                    Nenhum material encontrado.
                </div>
            </div>
        </div><!-- /.col-md-12 -->
    </div><!-- /.content -->
</div>
{% endblock %}

{% block javascripts %}
    <!-- Angular anomalia Script -->
    <script src="{{ asset('js/site/angular/app/controller/material-controller.js') }}"></script>
{% endblock %}
